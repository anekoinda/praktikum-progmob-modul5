<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".PilihRumahSakit"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rumah Sakit Penyedia Vaksin "
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/blackfont"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih satu tempat penyedia vaksinasi"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/greyfont"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- TEMPAT PELAKSANAAN -->
    <LinearLayout
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_data_rs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_rs"></androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- END TEMPAT PELAKSANAAN -->
</LinearLayout>